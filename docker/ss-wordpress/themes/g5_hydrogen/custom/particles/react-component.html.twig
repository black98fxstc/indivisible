{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
	<div id="{{ particle.selector }}"></div>
	<script>
		const domContainer = document.querySelector('#{{ particle.selector }}');
		ReactDOM.render(e({{ particle.class }}), domContainer);
	</script>
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascript %}
    <script src="{{ url('https://unpkg.com/react@16/umd/react.development.js') }}"></script>
    <script src="{{ url('https://unpkg.com/react-dom@16/umd/react-dom.development.js') }}"></script>
    {% for library in particle.library %}
	    <script src="{{ url(library.url) }}"></script>
    {% endfor %}
{% endblock %}  
